{% extends "layout.njk" %}

    {% block head %}
        <title>Community</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    {% endblock %}

{% block content %}

    

    <section class="cards">

      {% for item in items %}
        <div class="card" id="{{ item.id }}">
            <div class="card_image-container">
                <img src="{{ item.src }}" alt="Imagem com um fundo feito de grÃ¡fite da cor lilas com o nome StudyWithMe">
                {% if item.featured %}
                    <div class="featured">Featured</div>
                {% endif %}
            </div>
            <div class="card__content">
                <p>{{ item.title }}</p>
            </div>
            <div class="card__info">
                <p class="card__paragraph">{{ item.duration }}</p>
                <p class="card__name">{{ item.author }}</p>
            </div>
        </div>    
      {% endfor %}
    </section>

    <script src="/scripts.js"></script>

{% endblock %}