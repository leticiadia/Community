{% extends "layout.njk" %}

    {% block head %}
        <title>Community</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    {% endblock %}

{% block content %}
<div class="card-teachers">
    <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
      <section class="details">
        <form method="POST" action="/teachers?_method=PUT">
       
           <h3>Teacher Edit</h3>

           {% include 'teachers/fields.njk' %}

           <input type="hidden" name="id" value="{{ teacher.id }}">
        </form>

        <form id="form-delete" method="post" action="/teachers?_method=DELETE">
            <input type="hidden" name="id" value="{{ teacher.id }}">
            <button type="submit">Delete</button>
        </form>

        <script src="/scripts.js"></script>
       </section>

</div>

{% endblock %}